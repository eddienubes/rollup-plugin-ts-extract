{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "NodeNext",
    "target": "ESNext",
    "lib": [
      "es6",
      "dom",
      "es2016"
    ],
    "declaration": true,
    "declarationMap": false,
    "allowJs": true,
    "sourceMap": false,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "types": [
      "@types/jest",
      "node"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}